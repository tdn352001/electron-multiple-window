{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/main/**/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "noImplicitReturns": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/renderer/src/*",
      ],
      "@main/*": [
        "src/main/*"
      ]
    }
  }
}
